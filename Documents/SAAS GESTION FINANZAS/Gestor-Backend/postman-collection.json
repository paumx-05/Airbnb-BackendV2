						},
						"url": {
							"raw": "{{base_url}}/api/users/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users",
								"profile"
							]
						},
						"description": "Actualizar el perfil del usuario autenticado"
					},
					"response": []
				}
			],
			"description": "Endpoints de gestión de usuarios"
		},
